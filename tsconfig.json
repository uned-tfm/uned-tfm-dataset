{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "allowJs": false,
    "outDir": "./build",
    "rootDir": ".",
    // "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages/**/**.ts"
  ]
}
